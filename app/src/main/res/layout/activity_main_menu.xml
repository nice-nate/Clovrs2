<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.groupn.clovrs2.MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept_invite"
        android:drawableLeft="@drawable/acccept_invitation"
        android:id="@+id/accept_invite"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/create_meeting"
        android:layout_alignEnd="@+id/upload_media" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_meeting"
        android:drawableLeft="@drawable/add_meeting"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/manage_spaces"
        android:id="@+id/create_meeting"
        android:layout_alignStart="@+id/settings" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_media"
        android:drawableLeft="@drawable/upload"
        android:id="@+id/upload_media"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_spaces"
        android:drawableLeft="@drawable/manage_workspace"
        android:id="@+id/manage_spaces"
        android:onClick="startManageWorkspace"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts"
        android:drawableLeft="@drawable/contact"
        android:id="@+id/contacts"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:drawableLeft="@drawable/settings"
        android:id="@+id/settings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
